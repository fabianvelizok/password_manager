<div class="max-w-2xl mx-auto px-4 py-8">
  <div class="mb-6 flex items-center justify-between">
    <h1 class="text-2xl font-semibold tracking-tight">Passwords</h1>
    <%= link_to "New Password", new_password_path, class: "inline-flex items-center rounded-lg border px-3 py-2 text-sm hover:bg-gray-50" %>
  </div>

  <% if @passwords.any? %>
    <div class="space-y-3">
      <%= render @passwords %>
    </div>
  <% else %>
    <div class="rounded-2xl border bg-white p-8 text-center text-gray-600">
      <p class="mb-2 font-medium">No passwords yet</p>
    </div>
  <% end %>
</div>
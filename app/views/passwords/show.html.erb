<div class="max-w-2xl mx-auto px-4 py-8">
  <div class="mb-6 flex items-center justify-between">
    <h1 class="text-2xl font-semibold tracking-tight">Show Password</h1>
    <%= link_to "Back", passwords_path, class: "text-sm rounded-lg border px-3 py-2 hover:bg-gray-50" %>
  </div>

  <div class="rounded-2xl border bg-white shadow-sm mb-6">
    <div class="p-6 space-y-6">
      <div class="mt-2">
        <%= link_to @password.url, target: "_blank", rel: "noopener noreferrer", class: "text-blue-500 flex justify-between" do %>
          <h2 class="text-xl font-semibold"><%= @password.url %></h2>
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-6">
            <path stroke-linecap="round" stroke-linejoin="round" d="M13.5 6H5.25A2.25 2.25 0 0 0 3 8.25v10.5A2.25 2.25 0 0 0 5.25 21h10.5A2.25 2.25 0 0 0 18 18.75V10.5m-10.5 6L21 3m0 0h-5.25M21 3v5.25" />
          </svg>
        <% end %>
      </div>

      <div>
        <p class="text-xs font-semibold uppercase tracking-wide text-gray-500">Username / Email</p>
        <div class="relative mt-2 flex gap-2 items-center">
          <pre class="overflow-x-auto rounded-lg bg-gray-900 p-3 text-gray-100 flex-grow"><code class="font-mono text-sm"><%= @password.username %></code></pre>
          <button
            data-controller="clipboard"
            data-action="click->clipboard#copy"
            data-clipboard-content-value="<%= @password.username %>"
            class="cursor-pointer hover:text-green-500"
            type="button"
          >
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-6">
              <path stroke-linecap="round" stroke-linejoin="round" d="M15.666 3.888A2.25 2.25 0 0 0 13.5 2.25h-3c-1.03 0-1.9.693-2.166 1.638m7.332 0c.055.194.084.4.084.612v0a.75.75 0 0 1-.75.75H9a.75.75 0 0 1-.75-.75v0c0-.212.03-.418.084-.612m7.332 0c.646.049 1.288.11 1.927.184 1.1.128 1.907 1.077 1.907 2.185V19.5a2.25 2.25 0 0 1-2.25 2.25H6.75A2.25 2.25 0 0 1 4.5 19.5V6.257c0-1.108.806-2.057 1.907-2.185a48.208 48.208 0 0 1 1.927-.184" />
            </svg>
          </button>
        </div>
      </div>

      <div>
        <p class="text-xs font-semibold uppercase tracking-wide text-gray-500">Password</p>
        <div class="relative mt-2 flex gap-2 items-center">
          <pre class="overflow-x-auto rounded-lg bg-gray-900 p-3 text-gray-100 flex-grow"><code class="font-mono text-sm"><%= @password.password %></code></pre>
          <button
            data-controller="clipboard"
            data-action="click->clipboard#copy"
            data-clipboard-content-value="<%= @password.password %>"
            class="cursor-pointer hover:text-green-500"
            type="button"
          >
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-6">
              <path stroke-linecap="round" stroke-linejoin="round" d="M15.666 3.888A2.25 2.25 0 0 0 13.5 2.25h-3c-1.03 0-1.9.693-2.166 1.638m7.332 0c.055.194.084.4.084.612v0a.75.75 0 0 1-.75.75H9a.75.75 0 0 1-.75-.75v0c0-.212.03-.418.084-.612m7.332 0c.646.049 1.288.11 1.927.184 1.1.128 1.907 1.077 1.907 2.185V19.5a2.25 2.25 0 0 1-2.25 2.25H6.75A2.25 2.25 0 0 1 4.5 19.5V6.257c0-1.108.806-2.057 1.907-2.185a48.208 48.208 0 0 1 1.927-.184" />
            </svg>
          </button>
        </div>
      </div>
    </div>

    <% if current_user_password.editable? %>
      <div class="flex items-center justify-end gap-2 border-t px-6 py-4">
        <%= link_to "Edit", edit_password_path(@password), class: "text-sm rounded-lg border px-3 py-2 hover:bg-gray-50" %>
      </div>
    <% end %>
  </div>

  <div class="mb-6 flex items-center justify-between">
    <h2 class="text-2xl font-semibold tracking-tight">Share Password</h2>
    <% if current_user_password.shareable? %>
      <%= link_to "Add User", new_password_share_path(@password), class: "text-sm rounded-lg border px-3 py-2 hover:bg-gray-50" %>
    <% end %>
  </div>

  <div class="space-y-3">
    <% @password.user_passwords.includes(:user).each do |user_password|%>
      <div class="group block">
        <div class="rounded-xl border bg-white p-4 shadow-sm transition flex justify-between">
          <div class="flex items-center gap-1">
            <h2 class="truncate text-base font-semibold text-gray-900">
              <%= user_password.user.email %>
            </h2>
            <span class="text-gray-600">(<%= user_password.role.titleize %>)</span>
          </div>
          <% if current_user_password.deletable? %>
            <%= button_to password_share_path(@password, user_password.user), method: :delete, data: { turbo_confirm: "Are you sure?" } do %>
              <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-6 cursor-pointer text-red-500 hover:text-red-700">
                <path stroke-linecap="round" stroke-linejoin="round" d="m14.74 9-.346 9m-4.788 0L9.26 9m9.968-3.21c.342.052.682.107 1.022.166m-1.022-.165L18.16 19.673a2.25 2.25 0 0 1-2.244 2.077H8.084a2.25 2.25 0 0 1-2.244-2.077L4.772 5.79m14.456 0a48.108 48.108 0 0 0-3.478-.397m-12 .562c.34-.059.68-.114 1.022-.165m0 0a48.11 48.11 0 0 1 3.478-.397m7.5 0v-.916c0-1.18-.91-2.164-2.09-2.201a51.964 51.964 0 0 0-3.32 0c-1.18.037-2.09 1.022-2.09 2.201v.916m7.5 0a48.667 48.667 0 0 0-7.5 0" />
              </svg>
            <% end %>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
</div>
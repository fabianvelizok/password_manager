<%= form_with model: password, class: "space-y-6" do |f| %>
  <% if f.object.errors.any? %>
    <div class="rounded-lg border border-red-200 bg-red-50 p-4">
      <p class="text-sm font-medium text-red-800">Please fix the following:</p>
      <ul class="mt-2 list-disc space-y-1 pl-5 text-sm text-red-700">
        <% f.object.errors.full_messages.each do |e| %>
          <li><%= e %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= f.label :url, class: "block text-sm font-medium text-gray-700" %>
    <%= f.url_field :url, class: "mt-1 block w-full rounded-lg border-gray-300 shadow-sm focus:border-gray-900 focus:ring-gray-900", placeholder: "https://example.com" %>
  </div>

  <div>
    <%= f.label :username, "Username / Email", class: "block text-sm font-medium text-gray-700" %>
    <%= f.text_field :username, class: "mt-1 block w-full rounded-lg border-gray-300 shadow-sm focus:border-gray-900 focus:ring-gray-900", autocomplete: "username" %>
  </div>

  <div>
    <div class="flex items-center justify-between">
      <%= f.label :password, class: "block text-sm font-medium text-gray-700" %>
    </div>
    <%= f.text_field :password, class: "mt-1 block w-full rounded-lg border-gray-300 shadow-sm focus:border-gray-900 focus:ring-gray-900", autocomplete: "new-password" %>
  </div>

  <div class="flex items-center justify-end gap-2">
    <%= link_to "Cancel", (password.persisted? ? password_path(password) : passwords_path), class: "text-sm rounded-lg border px-3 py-2 hover:bg-gray-50" %>
    <%= f.submit (password.persisted? ? "Update" : "Create"), class: "inline-flex items-center rounded-lg bg-gray-900 px-4 py-2 text-sm font-medium text-white hover:bg-gray-800" %>
  </div>
<% end %>
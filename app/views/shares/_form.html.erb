<%= form_with model: [password, user_password], url: password_shares_path, class: "space-y-6" do |f| %>
  <% if f.object.errors.any? %>
    <div class="rounded-lg border border-red-200 bg-red-50 p-4">
      <p class="text-sm font-medium text-red-800">Please fix the following:</p>
      <ul class="mt-2 list-disc space-y-1 pl-5 text-sm text-red-700">
        <% f.object.errors.full_messages.each do |e| %>
          <li><%= e %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= f.label :user_id, class: "block text-sm font-medium text-gray-700" %>
    <%= f.collection_select :user_id, users, :id, :email, {}, { class: "mt-1 block w-full rounded-lg border-gray-300 shadow-sm focus:border-gray-900 focus:ring-gray-900" } %>
  </div>

  <div>
    <%= f.label :role, class: "block text-sm font-medium text-gray-700" %>
    <%= f.select :role, UserPassword::ROLES.map{ |role| [role.titleize, role] }, {}, { class: "mt-1 block w-full rounded-lg border-gray-300 shadow-sm focus:border-gray-900 focus:ring-gray-900" } %>
  </div>

  <div class="flex items-center justify-end">
    <%= f.submit "Share", class: "inline-flex items-center rounded-lg bg-gray-900 px-4 py-2 text-sm font-medium text-white hover:bg-gray-800" %>
  </div>
<% end %>
<div class="max-w-2xl mx-auto px-4 py-8">
  <div class="mb-6 flex items-center justify-between">
    <h1 class="text-2xl font-semibold tracking-tight">Share Password</h1>
  </div>

  <div class="rounded-2xl border bg-white shadow-sm">
    <div class="p-6">
      <%= form_with model: [@password, @user_password], url: password_shares_path, class: "space-y-6" do |f| %>
        <div>
          <%= f.label :user_id, class: "block text-sm font-medium text-gray-700" %>
          <%= f.collection_select :user_id, @users, :id, :email, {}, { class: "mt-1 block w-full rounded-lg border-gray-300 shadow-sm focus:border-gray-900 focus:ring-gray-900" } %>
        </div>

        <div class="flex items-center justify-end">
          <%= f.submit "Share", class: "inline-flex items-center rounded-lg bg-gray-900 px-4 py-2 text-sm font-medium text-white hover:bg-gray-800" %>
        </div>
      <% end %>
    </div>
  </div>
</div>